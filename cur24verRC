"Registrar los clientes"
  clientes = {}

def registrar_cliente(id, nombre, edad):
    if id not in clientes:
        clientes[id] = {'nombre': nombre, 'edad': edad}
        print(f'Cliente {nombre} registrado con éxito.')
    else:
        print(f'Error: El ID {id} ya está registrado.')

# Prueba de la función de registro
registrar_cliente(1, 'Juan Pérez', 30)
registrar_cliente(1, 'Ana Sánchez', 25)
